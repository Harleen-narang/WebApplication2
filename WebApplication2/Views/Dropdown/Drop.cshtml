<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expandable Sections</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <link href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" rel="stylesheet" />


    <link href="~/css/Review.css" rel="stylesheet" />
    <style>
        .clickable-row {
            cursor: pointer;
            background-color: #C0C0C0;
        }

        .toggle-icon {
            float: right;
            transition: transform 0.3s ease;
        }

        .rotate-up {
            transform: rotate(180deg);
        }

        .child-row {
            display: none;
        }
    </style>
</head>
<body>
    <div class="container" style="width:70%;">
        <div style="display: flex; justify-content: center;">
            <h2 class="decorative-heading">Dropdown</h2>
        </div>
        <table class="table table-striped table-bordered table-hover" id="userTable">
            <thead>
                <tr>
                    <th>Sections</th>
                </tr>
            </thead>
            <tbody>
                <!-- Document Section -->
                <tr class="clickable-row parent" data-id="documentSection">
                    <td>
                        Document Section
                        <i class="fa fa-chevron-down toggle-icon" data-id="documentSection"></i>
                    </td>
                </tr>
                <tr class="child-row child-documentSection">
                    <td colspan="1">
                        <table class="table table-bordered table-striped table-sm custom-table">
                            <thead style="background-color: #f8f9fa; color: #212529;">
                                <tr>
                                    <th>Sr No</th>
                                    <th>Proof Type</th>
                                    <th>Value</th>
                                    <th>File Name</th>
                                    <th>Deviation</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>PAN No</td>
                                    <td>AHGH6767</td>
                                    <td>
                                        @* <a href="@Url.Action("File", "User")" class="icon-link zoom-out"> *@
                                        <i class="fas fa-eye"></i>&nbsp; File Name
                                        </a>
                                    </td>
                                    <td>Yes</td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>

                <!-- Commercial Section -->
                <tr class="clickable-row parent" data-id="commercialSection">
                    <td>
                        Commercial Section
                        <i class="fa fa-chevron-down toggle-icon" data-id="commercialSection"></i>
                    </td>
                </tr>
                <tr class="child-row child-commercialSection">
                    <td colspan="1">Content related to Commercial Section goes here.</td>
                </tr>

                <!-- Reviews Section -->
                <tr class="clickable-row parent" data-id="reviewsSection">
                    <td>
                        Reviews
                        <i class="fa fa-chevron-down toggle-icon" data-id="reviewsSection"></i>
                    </td>
                </tr>
                <tr class="child-row child-reviewsSection">
                    <td colspan="1">
                        <table class="table table-striped table-bordered table-hover" id="userTable">
                            <thead style="background-color: #f8f9fa; color: #212529;">
                                <tr>
                                    <th class="col-md-2">Remarks</th>
                                    <th class="col-md-2">Submitted By</th>
                                    <th class="col-md-2">Routed To</th>
                                    <th class="col-md-2">Processed By</th>
                                    <th class="col-md-2">Workflow</th>
                                    <th class="col-md-2">Submitted Date</th>
                                </tr>
                            </thead>
                            </table>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <script>
        $(document).ready(function () {
            $(".parent").click(function () {
                var targetClass = $(this).data("id");
                var children = $(".child-" + targetClass);
                var icon = $(this).find(".toggle-icon");

                if (children.is(":visible")) {
                    children.fadeOut(300);
                    icon.removeClass("rotate-up").addClass("fa-chevron-down");
                } else {
                    children.fadeIn(500);
                    icon.addClass("rotate-up").removeClass("fa-chevron-down");
                }
            });

            $(".decorative-heading").hide().slideDown(1000);
        });
    </script>
</body>
</html>
