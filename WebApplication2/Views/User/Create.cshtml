@model WebApplication2.Models.User  

@{
    ViewBag.Title = "Add User";
}

<div class="container">
    <h2>Add User</h2>
    @using (Html.BeginForm("Create", "User", FormMethod.Post))  
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required", type = "email" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CreatedAt)
            @Html.TextBoxFor(model => model.CreatedAt, new { @class = "form-control", required = "required", type = "date" })
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    }
</div>
